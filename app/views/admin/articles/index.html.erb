<h2>Articles</h2>

<% if user_signed_in? %>
    <p>Você está logado com o email: <strong><%= current_user.email %></strong></p>
    <p><%= link_to "Novo Artigo", new_admin_article_path, class: "btn btn-primary" %></p>
    <%= link_to destroy_user_session_path, data: { turbo_method: :delete } do %>
        Sair
    <% end %>
<% end %>
<div>
    <% @articles.each do |article| %>
        <%= render partial: "article", locals: {article: article }%>
    <% end %>
</div>